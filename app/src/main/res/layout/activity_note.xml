        android:gravity="center_horizontal"
        />

    <fragment
        android:id="@+id/notefragment"
        android:name="com.example.wordmemorization.NoteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>